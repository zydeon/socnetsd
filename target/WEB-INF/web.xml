<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>

	<display-name>Hello, World Application</display-name>
	<description>
  This is a simple web application with a source code organization
  based on the recommendations of the Application Developer's Guide.
	</description>

	<!-- LOGIN -->
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>LoginSv</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>


	<!-- REGISTER -->
	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>RegisterSv</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>   

	<!-- LOGOUT -->
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>LogoutSv</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>     

	<!-- NEW POST -->
	<servlet>
		<servlet-name>NewPost</servlet-name>
		<servlet-class>NewPostSv</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>NewPost</servlet-name>
		<url-pattern>/newPost</url-pattern>
	</servlet-mapping> 

	<!-- NEW REPLY -->
	<servlet>
		<servlet-name>NewReply</servlet-name>
		<servlet-class>NewReplySv</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>NewReply</servlet-name>
		<url-pattern>/newReply</url-pattern>
	</servlet-mapping>  

	<!-- DELETE -->
	<servlet>
		<servlet-name>DeletePost</servlet-name>
		<servlet-class>DeletePostSv</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeletePost</servlet-name>
		<url-pattern>/deletePost</url-pattern>
	</servlet-mapping>  

	<!-- EDIT POST -->
	<servlet>
		<servlet-name>EditPost</servlet-name>
		<servlet-class>EditPostSv</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EditPost</servlet-name>
		<url-pattern>/editPost</url-pattern>
	</servlet-mapping> 

	<!-- NEW PM -->
	<servlet>
		<servlet-name>NewPM</servlet-name>
		<servlet-class>NewPMSv</servlet-class>
	</servlet>

    <servlet-mapping>
        <servlet-name>NewPM</servlet-name>
        <url-pattern>/newPM</url-pattern>
    </servlet-mapping>   

	<!-- OAuth -->
	<servlet>
		<servlet-name>OAuthCode</servlet-name>
		<servlet-class>OAuthCodeSv</servlet-class>
	</servlet>

    <servlet-mapping>
        <servlet-name>OAuthCode</servlet-name>
        <url-pattern>/oauthCode</url-pattern>
    </servlet-mapping>       

	<!-- WebsocketChat -->    
	<servlet>
		<servlet-name>WebSocketChat</servlet-name>
		<servlet-class>webSocket.ChatWebSocketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebSocketChat</servlet-name>
		<url-pattern>/chat</url-pattern>
	</servlet-mapping>

	<!-- WebsocketUsersOn -->    
	<servlet>
		<servlet-name>WebSocketUsersOn</servlet-name>
		<servlet-class>webSocket.UsersOnWebSocketServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>WebSocketUsersOn</servlet-name>
		<url-pattern>/usersOn</url-pattern>
	</servlet-mapping>  

	<!-- WebsocketNotifications -->    
	<servlet>
		<servlet-name>WebSocketNotifications</servlet-name>
		<servlet-class>webSocket.NotificationsWebSocketServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>WebSocketNotifications</servlet-name>
		<url-pattern>/notifications</url-pattern>
	</servlet-mapping>  	  


</web-app>
